<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp">

    <ImageButton
        android:id="@+id/imageButtonDownload"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:src="@android:drawable/stat_sys_download"
        android:tint="#020202"
        app:srcCompat="@android:drawable/stat_sys_download"
        tools:srcCompat="@android:drawable/stat_sys_download" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewSalon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FCFDFD"
            android:fontFamily="sans-serif-black"
            android:text="@string/item_salon"
            android:textAlignment="viewStart"
            android:textSize="22sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewItemDateSalon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="dateSalon" />


    </LinearLayout>
</LinearLayout>